<h1>UsersBackoffice::Users#index</h1>
<p>Find me in app/views/users_backoffice/users/index.html.erb</p>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@users, :email) %></th>
        <th>
          <%= link_to new_users_backoffice_user_path, class:"btn btn-success btn-circle" do %>
            <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= user.id %> </td>
          <td> <%= user.email %> </td>
          <td style="width: 100px">
            <%= link_to edit_users_backoffice_user_path(user), class:"btn btn-primary btn-circle" do %>
              <i class="fa fa-edit"></i>
            <% end %>
            <%= link_to users_backoffice_user_path(user), method: :delete,
            class:"btn btn-danger btn-circle", data: { confirm: "Are you sure?" } do %>
              <i class="fa fa-minus "></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @users %>

</div>